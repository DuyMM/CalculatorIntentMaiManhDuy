            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tieude_mar_top"
            android:layout_weight="1"
            android:text="@string/tieude"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/size_title" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/idLinnearLayout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_result"
        android:background="@color/background_result"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bieuthuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/cach_5dp"
            android:paddingLeft="@dimen/cach_55dp"
            android:paddingRight="@dimen/cach_55dp"
            android:text="@string/s0"
            android:textAlignment="textEnd"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/text_bieu_thuc" />

