            android:id="@+id/ketqua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/cach_5dp"
            android:maxLines="1"
            android:paddingEnd="@dimen/cach_55dp"
            android:paddingLeft="@dimen/cach_5dp"
            android:paddingRight="@dimen/cach_55dp"
            android:paddingStart="@dimen/cach_5dp"
            android:text="@string/s0"
            android:textAlignment="textEnd"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/text_result" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/idLinearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/idLinearSub1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
